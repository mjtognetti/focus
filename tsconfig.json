{
  "compilerOptions": {
    "outDir": "./dist", // just in case
    "typeRoots": ["./node_modules/@types", "./src/node_modules/@types"],
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, // prevents type errors in third-party libs, but also no type checking for our .d.ts files
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true
  },
  "include": ["src/**/*"]
}
